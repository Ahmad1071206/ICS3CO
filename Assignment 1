import math 

# 1. finding the area rectangle

lengh = int(input("enter the lenght of  rectangle. "))
width = int(input("enter the width of rectangle "))
area = lengh * width 
print(f"The area of the rectangle is: {area}")
# Taking input for the length of the rectangle

# 2. Compute the area of a circle

radius = float(input("Enter the radius of the circle: "))
area = math.pi * math.pow(radius, 2)
print(f"The area of the circle is: {area}")
# Printing the calculated area of the rectangle


# 3. Compute the surface area and volume of a cylinder

radius = float(input("Enter the radius of the cylinder: ")) 
height = float(input("Enter the height of the cylinder: "))
volume = math.pi * math.pow(radius, 2) * height
surface_area = (2 * math.pi * radius * height) + (2 * math.pi * math.pow(radius, 2))
print(f"The volume of the cylinder is: {volume}")
print(f"The surface area of the cylinder is: {surface_area}")
# Taking input for the radius of the cylinder

# 4. Compute the period of a pendulum

length = float(input("Enter the length of the pendulum (in meters): "))
g = 9.8  # acceleration due to gravity in m/s^2
period = 2 * math.pi * math.sqrt(length / g)
print(f"The period of the pendulum is: {period} seconds")
# Printing the volume of the cylinder with 2 decimal precision
