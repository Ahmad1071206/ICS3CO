# Start by asking the user how many items they want to enter
num_items = int(input("How many items are you entering? "))

# Initialize an empty list to store the items
items = []

# Use a loop to get user input for each item
print("Enter your items now:")
for i in range(num_items):
    item = input(f"Next item: ")
    items.append(item)

# Output the total number of items and list them
print(f"You have entered {len(items)} items.")
for item in items:
    print(item)

